generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  staff
  provider
  member
}

enum ClaimStatus {
  submitted
  review
  approved
  rejected
  paid
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String
  role         UserRole   @default(staff)
  createdAt    DateTime   @default(now())

  auditLogs    AuditLog[]
}

model Member {
  id        String   @id @default(cuid())
  memberNo  String   @unique
  fullName  String
  dob       DateTime?
  email     String?  @unique   // or String (required) if you want
  phone     String?
  address   String?
  status    String   @default("active")
  createdAt DateTime @default(now())

  policies  Policy[]
  claims    Claim[]
}

model Provider {
  id        String   @id @default(cuid())
  name      String
  type      String?
  address   String?
  phone     String?
  createdAt DateTime @default(now())

  claims    Claim[]
}

model Policy {
  id        String   @id @default(cuid())
  memberId  String
  planName  String
  startDate DateTime
  endDate   DateTime?
  status    String   @default("active")
  createdAt DateTime @default(now())

  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  claims    Claim[]

  @@index([memberId])
}

model Claim {
  id            String      @id @default(cuid())
  claimNo       String      @unique
  memberId      String
  providerId    String
  policyId      String
  amountClaimed Decimal     @db.Decimal(12, 2)
  amountApproved Decimal?   @db.Decimal(12, 2)
  status        ClaimStatus @default(submitted)
  notes         String?
  createdAt     DateTime    @default(now())

  member        Member      @relation(fields: [memberId], references: [id], onDelete: Restrict)
  provider      Provider    @relation(fields: [providerId], references: [id], onDelete: Restrict)
  policy        Policy      @relation(fields: [policyId], references: [id], onDelete: Restrict)

  items         ClaimItem[]
  payments      Payment[]

  @@index([memberId])
  @@index([providerId])
  @@index([policyId])
}

model ClaimItem {
  id          String   @id @default(cuid())
  claimId     String
  description String
  qty         Int
  unitCost    Decimal  @db.Decimal(12, 2)
  total       Decimal  @db.Decimal(12, 2)

  claim       Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)

  @@index([claimId])
}

model Payment {
  id         String   @id @default(cuid())
  claimId    String
  paidAmount Decimal  @db.Decimal(12, 2)
  paidAt     DateTime
  reference  String?
  createdAt  DateTime @default(now())

  claim      Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)

  @@index([claimId])
}

model AuditLog {
  id          String   @id @default(cuid())
  actorUserId String?
  action      String
  entityType  String
  entityId    String
  metadataJson Json?
  createdAt   DateTime @default(now())

  actor       User?    @relation(fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([actorUserId])
  @@index([entityType, entityId])
}
