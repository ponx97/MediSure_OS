{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "noEmit": false,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    "skipLibCheck": true,

    // ðŸ”‘ IMPORTANT: override inherited Vite setting
    "allowImportingTsExtensions": false
  },
  "include": ["server.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "components",
    "pages",
    "services",
    "src",
    "**/*.tsx",
    "vite.config.ts"
  ]
}
